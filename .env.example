# Environment variables for MeVe Framework

# Data paths
DATA_DIR=data
LOGS_DIR=logs

# Model cache
HF_HOME=.cache/huggingface
TRANSFORMERS_CACHE=.cache/transformers

# Configuration
MEVE_CONFIG=config/default.yaml
MEVE_ENV=development

# Vector DB
CHROMA_PERSIST_DIR=data/chroma_db
CHROMA_TELEMETRY=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/meve.log

# Performance
BATCH_SIZE=32
MAX_WORKERS=4
